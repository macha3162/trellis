%h1 Listing cards

%table
  %thead
    %tr
      %th Description
      %th List
      %th User
      %th Order
      %th
      %th
      %th

  %tbody
    - @cards.each do |card|
      %tr
        %td= card.description
        %td= card.list
        %td= card.user
        %td= card.order
        %td= link_to 'Show', card
        %td= link_to 'Edit', edit_card_path(card)
        %td= link_to 'Destroy', card, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Card', new_card_path
